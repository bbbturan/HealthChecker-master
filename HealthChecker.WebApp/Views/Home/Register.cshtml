@model UserSignUpViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Register</h1>

<form asp-action="Register" method="post" class="form-signup col-md-4" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name">@Model.Name</label>
        <input asp-for="Name" id="Name" class="form-control" placeholder="First Name" autofocus />
    </div>
    <div class="form-group">
        <label asp-for="SurName">@Model.SurName</label>
        <input asp-for="SurName" id="SurName" class="form-control" placeholder="Last Name" />
    </div>
    <div class="form-group">
        <label asp-for="UserName">@Model.UserName</label>
        <input asp-for="UserName" id="UserName" class="form-control" placeholder="User Name" />
    </div>
    <div class="form-group">
        <label asp-for="Email">@Model.Email</label>
        <input asp-for="Email" id="Email" class="form-control" type="email" placeholder="Email address" />
    </div>
    <div class="form-group">
        <label asp-for="PasswordHash">@Model.PasswordHash</label>
        <input asp-for="PasswordHash" id="Password" class="form-control" placeholder="Password" type="password" />
    </div>
    <input type="submit" class="btn btn-primary btn-lg btn-block" value="Kayıt Ol" />
</form>